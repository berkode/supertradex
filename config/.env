# ---------------------
# API Configuration
# ---------------------
# Raydium API Base URL
RAYDIUM_API_BASE_URL=https://api-v3.raydium.io

# Dex Screener API Base URL
DEX_SCREENER_API_BASE_URL=https://api.dexscreener.com

# ---------------------
# Solana Configuration
# ---------------------
# Solana Cluster (Options: mainnet, testnet)
SOLANA_CLUSTER=testnet

# Solana Mainnet RPC Endpoint
SOLANA_MAINNET_RPC=https://api.mainnet-beta.solana.com

# Solana Testnet RPC Endpoint
SOLANA_TESTNET_RPC=https://api.testnet.solana.com

# Wallet Address
WALLET_ADDRESS=A9kQTT7n35ukuYJrKGsSqwbpXBgs1rzG4XaV1JMVWoct

# Path to Solana CLI Executable
SOLANA_CLI_PATH=solana

# ---------------------
# Logging Configuration
# ---------------------
# Log Level (Options: DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log File Path
LOG_FILE=/var/log/trading_system.log

# Maximum Log File Size (Bytes)
MAX_LOG_FILE_SIZE=10485760  # 10 MB

# Backup Log Files Count
BACKUP_COUNT=5

# Enable Console Logging (Options: True, False)
ENABLE_CONSOLE_LOGGING=True

# ---------------------
# Trading Thresholds
# ---------------------
# Volume thresholds (in SOL)
MIN_VOLUME=10
MAX_VOLUME=10000

# Price thresholds (in SOL)
MIN_PRICE=0.01
MAX_PRICE=100

# Gas Fee Threshold (in SOL)
MAX_GAS_FEE=0.1

# Liquidity thresholds (in SOL)
MIN_LIQUIDITY=100
MAX_LIQUIDITY=10000

# Minimum Token Holders
MIN_HOLDERS=100

# Maximum Slippage (Percentage)
MAX_SLIPPAGE=0.01  # 1%

# Maximum Spread (Percentage)
MAX_SPREAD=0.02  # 2%

# ---------------------
# Risk Management
# ---------------------
# Risk per trade (Percentage of account balance)
RISK_PER_TRADE=0.01

# Maximum Daily Risk (Percentage of account balance)
DAILY_MAX_RISK=0.1  # 10%

# Maximum Weekly Risk (Percentage of account balance)
WEEKLY_MAX_RISK=0.2  # 20%

# Slippage Tolerance (Percentage)
SLIPPAGE_TOLERANCE=0.005  # 0.5%

# Trade Size (in SOL)
TRADE_SIZE=10

# Gain Minimum Target (Percentage)
BREAKOUT_POSITION_GAIN_TARGET=0.02  # 2%
TREND_FOLLOWING_POSITION_GAIN_TARGET=0.02  # 2%
MEAN_REVERSION_POSITION_GAIN_TARGET=0.02  # 2%
MOMENTUM_STRATEGY_POSITION_GAIN_TARGET=0.02  # 2%
BUYING_ON_UNTOUCHED_SUPPORT_POSITION_GAIN_TARGET=0.02  # 2%
SNIPING_NEW_MEME_COINS_POSITION_GAIN_TARGET=0.02  # 2%
COPY_TRADING_POSITION_GAIN_TARGET=0.02  # 2%

# Maximum Loss (Percentage, use negative value for loss)
BREAKOUT_MAX_POSITION_LOSS=-0.02  # -2%
TREND_FOLLOWING_MAX_POSITION_LOSS=-0.02  # -2%
MEAN_REVERSION_MAX_POSITION_LOSS=-0.02  # -2%
MOMENTUM_STRATEGY_MAX_POSITION_LOSS=-0.02  # -2%
BUYING_ON_UNTOUCHED_SUPPORT_MAX_POSITION_LOSS=-0.02  # -2%
SNIPING_NEW_MEME_COINS_MAX_POSITION_LOSS=-0.02  # -2%
COPY_TRADING_MAX_POSITION_LOSS=-0.02  # -2%

# Maximum Token Trades at a Time
MAX_TOKEN_TRADES=5

# Maximum Active Trades
MAX_TRADES=20

# ---------------------
# Notifications
# ---------------------
# Enable Notifications for Critical Events (Options: True, False)
ENABLE_NOTIFICATIONS=True

# Notification Webhook URL (e.g., Slack or Discord)
NOTIFICATION_WEBHOOK_URL=<Your Notification Webhook URL>

# ---------------------
# Base Settings
# ---------------------
# Base Currency
BASE_CURRENCY=SOL

# Default Leverage
DEFAULT_LEVERAGE=1

# ---------------------
# Advanced Wallet Configuration
# ---------------------
# Private Key Path (For Wallet Access)
PRIVATE_KEY_PATH=~/my-wallet.json

# Private Key Password (Optional, if your private key is encrypted)
PRIVATE_KEY_PASSWORD=

# ---------------------
# Performance Metrics
# ---------------------
# Calculate Sharpe Ratio (Options: True, False)
ENABLE_SHARPE_RATIO=True

# Calculate Maximum Drawdown (Options: True, False)
ENABLE_MAX_DRAWDOWN=True

# Calculate Risk of Ruin (Options: True, False)
ENABLE_RISK_OF_RUIN=True
